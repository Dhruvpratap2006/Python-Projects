# First Approach
import random  ## Importing random module
import string  ## Importing string module

password = ""  ## Create an empty string 
password_length = int(input("Enter the length of password : "))  ## Takes the password length as input

## In this variable value we have using some string function which are .ascii_letters , .digits , .punctuation, these function will have all the characters , digit , special character
value = string.ascii_letters + string.digits + string.punctuation  

for i in range(password_length):
    password += random.choice(value)  ## Using command random.choice to randomly select

print(f"Your random password is : {password}")






##   SECOND APPROACH

import random
import string

password_length = int(input("Enter the length of password : "))
value = string.ascii_letters + string.digits + string.punctuation

## Here we are trying to make a password using list comprehension and "".join function will join all the values of the list in a single string
password = "".join([random.choice(value) for i in range(password_length)])  


print(f"Your random password is : {password}")
