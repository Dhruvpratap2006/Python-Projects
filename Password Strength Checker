import re

## PASSWORD CHECK CONDITIONS
## password contain atleast 8 character , an upper and lower case, special character

def check_password_strength(password):
    if(len(password) < 8):
        return "Weak Password : Your password must contain atlest 8 character"
    
    if(not any(char.isdigit() for char in password)):
         return "Weak Password : Your password must contain atlest a digit"
    
    if(not any(char.isupper() for char in password)):
         return "Weak Password : Your password must contain atlest an upper case"
    
    if(not any (char.islower() for char in password)):
     return "Weak Password : Your password must contain atlest 8 character"
    
    if not re.search(r'[!@#$%^&*(){:}]' , password):
        return "Medium Password : Your password is secured"
    
    return "Strong Password"


def check_password():
    print("Welcome to the password checker tool designed by Dhruv...")

    while True:
        password = input("Enter your password (or type exit to quite)")

        if(password.lower() == 'exit'):
            print("Thanks for using this tool.")
            break
        result = check_password_strength(password)
        print(result)

if __name__ == "__main__":
    check_password()
