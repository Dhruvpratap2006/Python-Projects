

import qrcode, urllib.parse

upi_id = input("Enter the UPI ID : ")
name = input("Enter the name of Recipient : ")
amount = int(input("Enter the amount : "))
currency = "INR"   # UPI only supports INR
message = urllib.parse.quote(input("Enter the message: "))

# validate UPI id
if "@" not in upi_id:
    raise ValueError("Invalid UPI ID")

# URLs
phonepe_url  = f'upi://pay?pa={upi_id}&pn={name}&am={amount}&cu={currency}&tn={message}'
paytm_url    = phonepe_url
googlepay_url = phonepe_url

# Generate QR codes
phonepe_qr   = qrcode.make(phonepe_url)
paytm_qr     = qrcode.make(paytm_url)
googlepay_qr = qrcode.make(googlepay_url)

# Show
phonepe_qr.show()
paytm_qr.show()
googlepay_qr.show()

# Save
phonepe_qr.save("phonepe_qr.png")
paytm_qr.save("paytm_qr.png")
googlepay_qr.save("googlepay_qr.png")
