menu = {
    "Pizza" : 110,
    "Burger" : 120,
    "Sandwhich" : 100,
    "Momos" : 50,
    "Samosa" : 30,
    "Biryani" : 60
}

print("Welcome , to Dhruv restaurant ")
print("Here is our menu of thr program")
print("Pizza : 110\nBurger : 120\nSandwhich : 100\nMomos : 50\nSamosa : 30\nBiryani : 60")
print("What you want to order")

total_amount = 0

item_1 = input("Enter your first order : ")
if(item_1 in menu):
    total_amount += menu[item_1]
    print(f"Your dish {item_1} has been added")
else:
    print("This is not in our menu")

another_order = input("Do you want to order another thing\nYes or No")
if(another_order == "Yes"):
    item_2 = input("Enter your second order : ")
    if(item_2 in menu):
        total_amount += menu[item_2]
        print(f"Your item {item_2} has been added")
    else:
        print("This is not available in our restaurant")

print(f"Your Total Bill is : {total_amount}")

review = input("Do you want to review our services \n Yes or No")
if(review == "Yes"):
    print("Your services are nice")
else:
    print("Thanks for coming in our Restaurant!")
